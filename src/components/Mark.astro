---
interface Props {
	size?: number;
}

const { size = 120 } = Astro.props;
---

<svg width={size} height={size} viewBox="0 0 120 120" fill="none">
	<circle cx="60" cy="60" r="55" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
	<circle cx="60" cy="60" r="45" stroke="currentColor" stroke-width="0.75" opacity="0.5"/>
	<circle cx="60" cy="60" r="35" stroke="currentColor" stroke-width="1" opacity="0.7"/>
	<circle cx="60" cy="60" r="25" stroke="currentColor" stroke-width="1.5"/>
	<circle cx="60" cy="60" r="8" fill="currentColor"/>
</svg>
